<%- include('includes/head.ejs', { title: 'Signup' }) %>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
</head>

<body>
  <%- include('includes/header.ejs') %>
  <main id="signup">
    <h1>Signup</h1>
    <% if(preset.invalidity){ %>
      <p id="input-error"> <%=preset.message%> </p>
    <%} else if(preset.userExists) {%>
      <p id="input-error"> <%=preset.message%> </p>
    <%}%>
    <form action="/signup" method="POST">
      <div class="form-control">
        <label for="email">Email</label>
        <input  required type="email" id="email" name="email" value=<%=preset.email%>>
      </div>
      <div class="form-control">
        <label for="confirm-email">Confirm Email</label>
        <input  required type="email" id="confirm-email" name="confirm-email" value=<%=preset.confirmationEmail%>>
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input  required type="password" id="password" name="password" value=<%=preset.password%>>
      </div>
      <button class="btn">Create user</button>
    </form>
    <div id="auth-alternative">
      <a class="btn btn-alt" href="/login">Login instead</a>
    </div>
  </main>
</body>

</html>